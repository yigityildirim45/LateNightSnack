@page
@model IndexModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4">
                <i class="bi bi-moon-stars text-primary"></i> Gece Tarifleri
            </h1>
            <p class="lead text-muted">Gece acıktığınızda hazırlayabileceğiniz pratik tarifler</p>
        </div>
        <div class="col-md-4 text-end d-flex align-items-center justify-content-end">
            <a href="/Recipes/Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Yeni Tarif Ekle
            </a>
        </div>
    </div>

    <div class="recipe-grid">
        @foreach (var recipe in Model.Recipes)
        {
            <div class="card h-100">
                <div class="card-img-wrapper">
                    <img src="@recipe.ImageUrl" class="card-img-top" alt="@recipe.Title">
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <i class="bi bi-bookmark-star text-warning"></i> @recipe.Title
                    </h5>
                    <p class="card-text flex-grow-1">@recipe.Description</p>
                    <div class="mt-3">
                        <div class="recipe-meta mb-3">
                            <span class="badge bg-primary me-2">
                                <i class="bi bi-clock"></i> @recipe.GetPrepTimeDisplay()
                            </span>
                            <span class="badge bg-secondary">
                                <i class="bi bi-calendar"></i> @recipe.CreatedDate.ToString("dd.MM.yyyy")
                            </span>
                        </div>
                        <a href="/Recipes/Details/@recipe.Id" class="btn btn-info w-100">
                            <i class="bi bi-eye"></i> Tarifi Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Recipes.Any())
    {
        <div class="text-center my-5">
            <div class="display-6 text-muted mb-3">
                <i class="bi bi-emoji-frown"></i>
            </div>
            <h3 class="text-muted mb-4">Henüz hiç tarif eklenmemiş</h3>
            <a href="/Recipes/Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> İlk Tarifi Sen Ekle
            </a>
        </div>
    }
</div> 